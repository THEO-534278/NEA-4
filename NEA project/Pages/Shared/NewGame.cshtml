@page
@model NewGameModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    p{
        font-size: 48px;
    }
    .button{
        
        background-color: black;
        border: 0px;
        padding: 48px;
        border-radius: 8px;
        box-shadow: 0px 0px 6px #000000;
        transition: all 0.5s ease;
    }
    .button:hover{
        background-color: white;
        box-shadow: 0px 0px 24px #AAAAAA;
    }
    .buttonhard{
        background-color: #E01040;
    }

    .buttoneasy {
        background-color: #20E440;
    }
    .buttonmid {
        background-color: #DAEA10;
    }


</style>

<div class="text-center">
    <h1 class="display-4">New Game</h1>
    <p>SELECT LEVEL:</p>
    <button class="button buttoneasy" onclick="window.location.href = '/puzzle?level=1'">EASY</button>
    <button class="button buttonmid" onclick="window.location.href = '/puzzle?level=2'">MIDDLE</button>
    <button class="button buttonhard" onclick="window.location.href = '/puzzle?level=3'">HARD</button>

</div>
